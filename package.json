{
  "name": "backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project backend/tsconfig.json",
    "start": "npm run build && concurrently \"npm run start:backend\" \"npm run dev:frontend\"",
    "start:backend": "npm run build && npm run serve:backend",
    "serve:backend": "nodemon --watch backend/src --ext ts,json --exec \"npm run build && node backend/dist/src/index.js\"",
    "start:frontend": "cd frontend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "test:backend": "jest --config jest.config.js",
    "test:frontend": "cd frontend/app-desacoplada-react && npm test",
    "test:watch": "npm run test:backend -- --watch"
  },
