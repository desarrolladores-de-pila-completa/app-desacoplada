{
  "apps": [
    {
      "name": "app-desacoplada-backend",
      "script": "src/index.js",
      "cwd": "./",
      "instances": "max",
      "exec_mode": "cluster",
      "env": {
        "NODE_ENV": "production",
        "PORT": "3001"
      },
      "env_production": {
        "NODE_ENV": "production",
        "PORT": "3001"
      },
      "log_file": "./logs/app.log",
      "out_file": "./logs/out.log",
      "error_file": "./logs/error.log",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "merge_logs": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "max_memory_restart": "1G",
      "restart_delay": 4000,
      "autorestart": true,
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "logs",
        "*.log"
      ]
    }
  ]
}